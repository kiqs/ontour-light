include head.jade

section(id="landing-head")
	a(href="/welcome") Home
	a(id="sign-in", href="/signin") Sign in
	a(id="sign-up", href="/signup") Sign up
	a(id="try", href="/") Taste it

form(id="landing-form",
	 name="loginform",
	 ng-controller="LandingController",
	 ng-submit="submitLogin()",
	 novalidate)
	input(class="landing-data", 
		  type="text", 
		  name="login", 
		  placeholder="Login",
		  ng-model="user.login",
		  ng-class="{invalid: loginform.login.submitted && (loginform.login.$error.required || loginform.login.$invalid)}",
		  required)
	input(class="landing-data", 
		  type="password", 
		  name="password", 
		  placeholder="Password",
		  ng-model="user.password",
		  ng-class="{invalid: loginform.password.submitted && (loginform.password.$error.required || loginform.password.$invalid)}",
		  required)
	button(class="landing-data", 
		   type="submit",
		   ng-click="signin()") Sign in

include footer.jade
