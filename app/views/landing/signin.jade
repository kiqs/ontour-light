doctype html
html
	head
		meta(name="viewport", content="initial-scale=1.0, user-scalable=no")
		meta(charset="utf-8")
		title Ontour.im | Music Trip Planner
		meta(name="description", content="Follow the shows of your favourite bands")

		link(rel="icon", type="image/png", href="img/ontour-ico.png")
		link(rel="stylesheet", href="css/normalize.css")
		link(rel='stylesheet', href='/css/all.min.css')
		
	body
		section(id="landing-pic")

		section(id="landing-head")
			a(href="/welcome") Home
			a(id="sign-in", href="/signin") Sign in
			a(id="sign-up", href="/signup") Sign up
			a(id="try", href="/") Taste it

		form(method="POST", id="landing-form")
			input(class="landing-data", type="text", name="login", placeholder="Login")
			input(class="landing-data", type="password", name="password", placeholder="Password")
			button(class="landing-data", type="submit") Sign in
