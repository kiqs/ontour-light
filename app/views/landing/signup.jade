include head.jade

section(id="landing-head")
	a(href="/welcome") Home
	a(id="sign-in", href="/signin") Sign in
	a(id="sign-up", href="/signup") Sign up
	a(id="try", href="/") Taste it

form(id="landing-form", novalidate, name="regform", ng-submit="submitRegistration()", ng-controller="LandingController")
	input(class="landing-data", 
		type="email", 
		name="email", 
		placeholder="Email", 
		ng-model="user.email", 
		ng-model-options="{ updateOn: 'blur' }", 
		ng-class="{invalid: regform.email.$dirty && (regform.email.$error.required || regform.email.$invalid)}",
		required)
	input(class="landing-data", 
		type="text", 
		name="login", 
		placeholder="Login", 
		ng-model="user.login", 
		ng-model-options="{ updateOn: 'blur' }",
		ng-class="{invalid: regform.login.$dirty && (regform.login.$error.required || regform.login.$invalid)}",
		required)
	input(class="landing-data", 
		type="password", 
		name="password", 
		placeholder="Password", 
		ng-model="user.password", 
		ng-model-options="{ updateOn: 'blur' }", 
		ng-class="{invalid: regform.password.$dirty && (regform.password.$error.required || regform.password.$invalid)}",
		required)
	input(class="landing-data", 
		type="password", 
		name="password_repeat", 
		placeholder="Repeat password", 
		ng-model="user.password_repeat", 
		ng-model-options="{ updateOn: 'blur' }", 
		ng-class="{invalid: regform.password_repeat.$dirty && (regform.password_repeat.$error.required || regform.password_repeat.$invalid)}",
		required)
	button(class="landing-data", 
		type="submit") Sign up

include footer.jade
